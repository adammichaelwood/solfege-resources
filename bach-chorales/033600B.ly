ASvoiceAA = \relative c'{
    \set Staff.instrumentName = #"Soprano"
    \set Staff.shortInstrumentName = #"S."
    \clef treble
    %staffkeysig
    \key a \major 
    %bartimesig: 
    \time 4/4 
    \partial 4
    a'4     a a fis b      | % 1
    a a gis\fermata  cis      | % 2
    cis cis fis e      | % 3
    e dis e\fermata  cis      | % 4
    cis cis d cis      | % 5
    b ais b\fermata  cis      | % 6
    cis cis b a      | % 7
    a gis a\fermata  s4 \bar "|." 
}% end of last bar in partorvoice

 

AAvoiceBA = \relative c'{
