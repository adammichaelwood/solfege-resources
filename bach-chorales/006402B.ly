ASvoiceAA = \relative c'{
    \set Staff.instrumentName = #"Soprano"
    \set Staff.shortInstrumentName = #"S."
    \clef treble
    %staffkeysig
    \key c \major 
    %bartimesig: 
    \time 4/4 
    \partial 4
    g'4     g g a g      | % 1
    c d c2\fermata       | % 2
    b4 d e d      | % 3
    b a g\fermata  g      | % 4
    c b d a      | % 5
    g e d\fermata  d      | % 6
    a' a a b      | % 7
    c a g8 a b4      | % 8
    a2 g4 g      | % 9
    g1\fermata  \bar "|." 
}% end of last bar in partorvoice

 

AAvoiceBA = \relative c'{
    \set Staff.instrumentName = #"Alto"
