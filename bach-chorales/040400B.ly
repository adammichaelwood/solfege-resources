    c b c8 d e c      | % 3
    c4 b c2      | % 4
    d4 c g' g,8 a      | % 5
    b e, e'4 e2      | % 6
    e8 d~ d c~ c b a4      | % 7
    a gis e s4 \bar "|." 
}% end of last bar in partorvoice

 

ABvoiceDA = \relative c{
    \set Staff.instrumentName = #"Bass"
    \set Staff.shortInstrumentName = #"B."
    \clef bass
    %staffkeysig
    \key c \major 
    %bartimesig: 
    \time 4/4 
