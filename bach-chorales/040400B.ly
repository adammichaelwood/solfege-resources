    a b a g      | % 3
    a g8 f e2      | % 4
    g4 f8 e d d' c4      | % 5
    b a gis2      | % 6
    e4 e e a8 g      | % 7
    f4 e8 d c4 s4 \bar "|." 
}% end of last bar in partorvoice

 

ATvoiceCA = \relative c{
    \set Staff.instrumentName = #"Tenor"
    \set Staff.shortInstrumentName = #"T."
    \clef bass
    %staffkeysig
    \key c \major 
    %bartimesig: 
    \time 4/4 
    \partial 4
    b'4     a8 gis fis4 gis b      | % 1
